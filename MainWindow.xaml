<Window x:Class="ControllerManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Controller Manager" Height="700" Width="1200"
        Background="#1E1E1E"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#000000" BorderBrush="#333" BorderThickness="0,0,1,0">
            <StackPanel>
                <Border Background="#0078D4" Padding="20,30" Margin="0,0,0,20">
                    <StackPanel>
<TextBlock TextWrapping="Wrap">
    <InlineUIContainer>
        <Image Source="resources/icon.png" Height="20" Width="20"/>
    </InlineUIContainer>
</TextBlock>

                        <TextBlock Text="Controller" FontSize="16" FontWeight="Bold" Foreground="White" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Manager" FontSize="16" FontWeight="Bold" Foreground="White" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <ItemsControl ItemsSource="{Binding NavigationItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Command="{Binding DataContext.NavigateCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding Page}"
                                    Style="{StaticResource NavigationButtonStyle}"
                                    Height="50" Margin="0,0,0,2">
                                <StackPanel Orientation="Horizontal" Margin="20,0">
                                    <TextBlock Text="{Binding Icon}" FontSize="18" Margin="0,0,15,0" 
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Name}" FontSize="14" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden" Background="#1E1E1E"/>
    </Grid>
</Window>

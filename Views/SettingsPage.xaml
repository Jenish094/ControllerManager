<Page x:Class="ControllerManager.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#1E1E1E">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40" MaxWidth="800">
            <TextBlock Text="Settings" FontSize="28" FontWeight="Bold" Foreground="White" Margin="0,0,0,30"/>

            <Border Background="#2D2D30" Padding="30" CornerRadius="8" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="General" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,20"/>

                    <CheckBox Content="Start with Windows" IsChecked="{Binding StartWithWindows}"
                              Foreground="#CCCCCC" Margin="0,0,0,15" FontSize="14"/>
                    <CheckBox Content="Minimize to Tray" IsChecked="{Binding MinimizeToTray}"
                              Foreground="#CCCCCC" Margin="0,0,0,15" FontSize="14"/>
                    <CheckBox Content="Show Notifications" IsChecked="{Binding ShowNotifications}"
                              Foreground="#CCCCCC" FontSize="14"/>
                </StackPanel>
            </Border>

            <Border Background="#2D2D30" Padding="30" CornerRadius="8" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Controller" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,20"/>

                    <CheckBox Content="Auto-detect Controllers" IsChecked="{Binding AutoDetectControllers}"
                              Foreground="#CCCCCC" Margin="0,0,0,15" FontSize="14"/>
                    <CheckBox Content="Enable Adaptive Triggers (DualSense)" IsChecked="{Binding EnableAdaptiveTriggers}"
                              Foreground="#CCCCCC" Margin="0,0,0,15" FontSize="14"/>

                    <TextBlock Text="Default Vibration Intensity" Foreground="#CCCCCC" Margin="0,15,0,10" FontSize="14"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>
                        <Slider Value="{Binding DefaultVibrationIntensity}" Minimum="0" Maximum="100" 
                                TickFrequency="10" IsSnapToTickEnabled="True" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{Binding DefaultVibrationIntensity}" 
                                   Foreground="White" FontSize="16" HorizontalAlignment="Right" 
                                   VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Background="#2D2D30" Padding="30" CornerRadius="8" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Advanced" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,20"/>

                    <Button Content="Reset All Settings" Command="{Binding ResetSettingsCommand}"
                            Width="200" Height="40" Background="#D13438" Foreground="White" 
                            BorderThickness="0" Cursor="Hand" HorizontalAlignment="Left"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>

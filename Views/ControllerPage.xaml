<Page x:Class="ControllerManager.Views.ControllerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#1E1E1E">

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="#2D2D30" Padding="20" CornerRadius="8" Margin="0,0,0,30">
            <TextBlock Text="{Binding ConnectionStatus}" FontSize="18" Foreground="White" HorizontalAlignment="Center"/>
        </Border>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

<!-- menu/view -->
            <Border Grid.Row="0" Grid.Column="1" Background="#2D2D30" Padding="15" CornerRadius="8" Margin="0,0,0,15" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="View" Width="40" Height="30" Background="#444" Foreground="#999" 
                               TextAlignment="Center" VerticalAlignment="Center" FontSize="10" FontWeight="Bold"
                               Name="MenuButton" Margin="20,0,0,0"/>
                    <TextBlock Text="Menu" Width="40" Height="30" Background="#444" Foreground="#999" 
                               TextAlignment="Center" VerticalAlignment="Center" FontSize="10" FontWeight="Bold"
                               Name="ViewButton"/>

                </StackPanel>
            </Border>

            <StackPanel Grid.Row="1" Grid.Column="0" VerticalAlignment="Top">
<!-- LB/LT -->
                <Border Background="#2D2D30" Padding="15" CornerRadius="8">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="LT" Width="30" Height="30" Background="#444" Foreground="#FFA500" 
                                   TextAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"
                                   Name="LTrigger" Cursor="Hand"/>
                        <TextBlock Text="LB" Width="30" Height="30" Background="#444" Foreground="#888" 
                                   TextAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"
                                   Name="LBumper" Cursor="Hand" Margin="20,0,0,0"/>
                    </StackPanel>
                </Border>

                <Border Background="#2D2D30" Padding="15" CornerRadius="8" Margin="0,15,0,0">
                    <Grid Width="100" Height="100">
                        <Ellipse Width="90" Height="90" Fill="#333" Stroke="#666" StrokeThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Ellipse Width="40" Height="40" Fill="#0066FF" Stroke="#0099FF" StrokeThickness="2" 
                                 HorizontalAlignment="Center" VerticalAlignment="Center" Name="LeftJoystickInner" Cursor="Hand"/>
                    </Grid>
                </Border>

                <Border Background="#2D2D30" Padding="15" CornerRadius="8" Margin="0,15,0,0">
                    <Grid Width="100" Height="100" HorizontalAlignment="Center">
                        <Polygon Points="50,10 60,30 40,30" Fill="#444" Stroke="#888" StrokeThickness="1"
                                 Name="DPadUp" Cursor="Hand"/>
                        <Polygon Points="50,90 60,70 40,70" Fill="#444" Stroke="#888" StrokeThickness="1"
                                 Name="DPadDown" Cursor="Hand"/>
                        <Polygon Points="10,50 30,40 30,60" Fill="#444" Stroke="#888" StrokeThickness="1"
                                 Name="DPadLeft" Cursor="Hand"/>
                        <Polygon Points="90,50 70,40 70,60" Fill="#444" Stroke="#888" StrokeThickness="1"
                                 Name="DPadRight" Cursor="Hand"/>
                    </Grid>
                </Border>
            </StackPanel>

            <Grid Grid.Row="1" Grid.Column="1">
                <Border Background="#2D2D30" CornerRadius="8" Padding="40">
                    <Viewbox MaxHeight="300">
                        <Grid Width="400" Height="300">
                            <Ellipse Width="200" Height="200" Stroke="#666" StrokeThickness="3" 
                                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Ellipse Width="160" Height="160" Stroke="#666" StrokeThickness="2" 
                                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            
                            <TextBlock Text="Change Controller Image depending on type" 
                                       FontSize="16" Foreground="#888" HorizontalAlignment="Center" 
                                       VerticalAlignment="Center" TextAlignment="Center"/>
                        </Grid>
                    </Viewbox>
                </Border>
            </Grid>

            <StackPanel Grid.Row="1" Grid.Column="2" VerticalAlignment="Top">
                <Border Background="#2D2D30" Padding="15" CornerRadius="8">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="RT" Width="30" Height="30" Background="#444" Foreground="#FFA500" 
                                   TextAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"
                                   Name="RTrigger" Cursor="Hand"/>
                        <TextBlock Text="RB" Width="30" Height="30" Background="#444" Foreground="#888" 
                                   TextAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"
                                   Name="RBumper" Cursor="Hand" Margin="20,0,0,0"/>
                    </StackPanel>
                </Border>

                <Border Background="#2D2D30" Padding="15" CornerRadius="8" Margin="0,15,0,0">
                    <Grid Width="100" Height="100" HorizontalAlignment="Center">
                        <!--Y-->
                        <Ellipse Width="25" Height="25" Fill="#444" Stroke="#FFFF00" StrokeThickness="2"
                                 HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0"
                                 Name="ButtonY" Cursor="Hand"/>
                        <!--X-->
                        <Ellipse Width="25" Height="25" Fill="#444" Stroke="#00CCFF" StrokeThickness="2"
                                 HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0"
                                 Name="ButtonX" Cursor="Hand"/>
                        <!--B-->
                        <Ellipse Width="25" Height="25" Fill="#444" Stroke="#FF0000" StrokeThickness="2"
                                 HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"
                                 Name="ButtonB" Cursor="Hand"/>
                        <!--A-->
                        <Ellipse Width="25" Height="25" Fill="#444" Stroke="#00FF00" StrokeThickness="2"
                                 HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,5"
                                 Name="ButtonA" Cursor="Hand"/>
                    </Grid>
                </Border>

                <Border Background="#2D2D30" Padding="15" CornerRadius="8" Margin="0,15,0,0">
                    <Grid Width="100" Height="100">
                        <Ellipse Width="90" Height="90" Fill="#333" Stroke="#666" StrokeThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Ellipse Width="40" Height="40" Fill="#FF6600" Stroke="#FF9933" StrokeThickness="2" 
                                 HorizontalAlignment="Center" VerticalAlignment="Center" Name="RightJoystickInner" Cursor="Hand"/>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Page>

<Page x:Class="ControllerManager.Views.ProfilesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#1E1E1E">

    <Grid Margin="40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#2D2D30" Padding="20" CornerRadius="8" Margin="0,0,20,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock Text="GameList" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,15"/>
                    <Button Content="+" FontSize="20" Width="30" Height="30" 
                            Command="{Binding AddProfileCommand}"
                            Background="#0078D4" Foreground="White" BorderThickness="0" 
                            HorizontalAlignment="Left" Cursor="Hand"/>
                </StackPanel>

                <TextBox Grid.Row="1" Margin="0,15,0,15" Padding="8" 
                         Text="{Binding NewProfileName, UpdateSourceTrigger=PropertyChanged}"
                         Background="#3E3E42" Foreground="White" BorderBrush="#555" 
                         FontSize="14" Height="35"/>

                <ListBox Grid.Row="2" ItemsSource="{Binding Profiles}"
                         SelectedItem="{Binding SelectedProfile}"
                         Background="Transparent" BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#3E3E42" Padding="10" Margin="0,5" CornerRadius="4">
                                <TextBlock Text="{Binding Name}" Foreground="White" FontSize="14"/>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <Border Grid.Column="1" Background="#2D2D30" Padding="40" CornerRadius="8">
            <Grid>
                <StackPanel Visibility="{Binding SelectedProfile, Converter={StaticResource NullToVisibilityConverter}}">
                    <TextBlock Text="Game Name" FontSize="20" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,30"/>

                    <Grid Height="400" Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <Border Background="#3E3E42" Padding="15,10" CornerRadius="4">
                                <TextBlock Text="L Trigger&#x0a;L Bumper" Foreground="#CCCCCC" TextAlignment="Center"/>
                            </Border>
                            <Border Background="#3E3E42" Padding="15,10" CornerRadius="4">
                                <TextBlock Text="Left Joystick +&#x0a;Share Button&#x0a;Left Button" 
                                           Foreground="#CCCCCC" TextAlignment="Center"/>
                            </Border>
                            <Border Background="#3E3E42" Padding="15,10" CornerRadius="4">
                                <TextBlock Text="DPAD" Foreground="#CCCCCC" TextAlignment="Center"/>
                            </Border>
                        </StackPanel>

                        <Viewbox Grid.Column="1" Margin="20,0">
                            <Grid Width="300" Height="250">
                                <Ellipse Width="180" Height="180" Stroke="#666" StrokeThickness="2" 
                                         HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <TextBlock Text="Change Controller&#x0a;Image depending on&#x0a;type" 
                                           FontSize="14" Foreground="#666" HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" TextAlignment="Center"/>
                            </Grid>
                        </Viewbox>

                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                            <Border Background="#3E3E42" Padding="15,10" CornerRadius="4">
                                <TextBlock Text="R Trigger&#x0a;R Bumper" Foreground="#CCCCCC" TextAlignment="Center"/>
                            </Border>
                            <Border Background="#3E3E42" Padding="15,10" CornerRadius="4">
                                <TextBlock Text="ABXY Buttons&#x0a;Menu Button" 
                                           Foreground="#CCCCCC" TextAlignment="Center"/>
                            </Border>
                            <Border Background="#3E3E42" Padding="15,10" CornerRadius="4">
                                <TextBlock Text="Right Joystick&#x0a;Right Button" 
                                           Foreground="#CCCCCC" TextAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Edit Profile" Command="{Binding EditProfileCommand}"
                                Width="120" Height="35" Background="#0078D4" Foreground="White" 
                                BorderThickness="0" Cursor="Hand"/>
                        <Button Content="Delete Profile" Command="{Binding DeleteProfileCommand}" Margin="10,0,0,0"
                                Width="120" Height="35" Background="#D13438" Foreground="White" 
                                BorderThickness="0" Cursor="Hand"/>
                    </StackPanel>
                </StackPanel>

                <TextBlock Text="Select or create a profile" FontSize="16" Foreground="#666" 
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Visibility="{Binding SelectedProfile, Converter={StaticResource InverseNullToVisibilityConverter}}"/>
            </Grid>
        </Border>
    </Grid>
</Page>
